<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="rules"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/translation_rules_title_text"
        style="@style/TheoryTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_vertical_margin"
        android:layout_marginHorizontal="@dimen/default_vertical_margin"
        android:gravity="center"
        android:text="@string/text_rules"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/translation_rules_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_vertical_margin"
        tools:listitem="@layout/translation_rules_list_item" />

</LinearLayout>